{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        // "plugin:vue/essential"
        // root element 여러개 설정한다고 에러나는거 해결
        "plugin:vue/vue3-recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        // eslint 에서 컴포넌트 이름 1단어로 설정 시 오류 발생하는것 해결
        // npx eslint --init 후 생성된 .eslintrc.json 파일에 아래 rule 을 추가
        "vue/multi-word-component-names": "off"
    }
}
